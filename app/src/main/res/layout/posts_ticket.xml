<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@color/whitebackground"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="center"
    android:layoutDirection="rtl"

    android:orientation="vertical"
    android:textAlignment="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/background"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="vertical"

        android:paddingRight="5dp"

        android:textAlignment="center"

        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/background"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:orientation="horizontal"

            android:paddingBottom="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"

            android:paddingTop="1dp"
            android:textAlignment="center">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/txtflollower"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="0"
                android:adjustViewBounds="false"
                android:src="@drawable/persoicon" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/bulogin"
                android:layout_toLeftOf="@+id/webView"
                android:layout_toRightOf="@+id/bulogin"
                android:layout_weight="1"
                android:background="@color/white"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:paddingRight="3dp"
                android:text="User name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/customRed"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0"
                android:background="@color/white"
                android:src="@drawable/empty_heart" />


        </LinearLayout>

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="fill_parent"
            android:layout_height="70pt"
            android:layout_alignBottom="@+id/txtflollower"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/caption"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/bulogin"
            android:layout_toLeftOf="@+id/webView"
            android:layout_toRightOf="@+id/bulogin"
            android:background="@color/white"
            android:gravity="left"

            android:paddingBottom="2dp"
            android:paddingRight="5dp"
            android:text="Love new twitter feathers, looking forword for new addation feather"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/tv_tweet_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="2015-12-11"

                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="Likes"

                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="3888"

                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="16dp" />

            </LinearLayout>

            <Button
                android:id="@+id/contactgiver"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Primary"
                android:onClick="contactGiver"
                android:text="Contact Giver"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>